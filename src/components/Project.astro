---
export interface Props {
  project: {
    frontmatter: {
      title: string
      brief: string
      color: string
      image: string
      position: string
    }
    Content: string
  }
}

const {
  project: { frontmatter, Content },
}: Props = Astro.props

import { t } from "i18next"
import Card from "./Card.astro"
---

<Card
  title={frontmatter.title}
  body={frontmatter.brief}
  backgroundType="image-color"
  backgroundColors={{ primary: frontmatter.color }}
  backgroundImage={frontmatter.image}
  backgroundImagePosition={frontmatter.position as "center" | "left" | "right"}
  clickable
  content={t("projects.readMore")}
>
  <div slot="dialog-content">
    <div class="dialog__content">
      <Content />
    </div>
  </div>
</Card>
