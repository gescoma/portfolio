---
import { t } from "i18next";
import Card from "./Card.astro";
import ContactButtons from "./ContactButtons.astro";
---

<Card
  title={t("contact.title")}
  body={t("contact.body")}
  size="large"
  backgroundType="organic-gradient"
  backgroundColors={{
    primary: "var(--secondary-hex)",
    secondary: "var(--accent-hex)",
  }}
>
  <ContactButtons />
</Card>