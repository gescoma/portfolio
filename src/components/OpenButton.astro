---
import TopRightArrow from "./icons/TopRightArrow.astro";

export interface Props {
  color?: string
  size?: string
  text?: string
}

const { color = "black", size = "normal", text="About-me" } = Astro.props

//todo: text comes from under the icon and the button size gets bigger with transition
---

<div class="link-notice" style={{color}}>
  <div class="text">{text}</div>
  <TopRightArrow width="1rem" height="1rem" color={color} />
</div>

<style>
  div.link-notice {
    display: inline-block;
    padding: 1rem;
    background-color: var(--white);
    border-radius: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    gap: 0.5rem;
    transition: all 0.2s ease-in-out;
  }
  div.text {
    margin-top: -0.1rem;
    width: 0;
    overflow: hidden;
    /* height: 0; */
    text-wrap: nowrap;
    right: -100%;
  }

  div.link-notice:hover .text{
    width: 0;
    animation: open 0.2s ease-in-out forwards;
  }

  @keyframes open {
    0% {
      width: 0;
    }
    100% {
      width: 100%;
    }
  }



</style>